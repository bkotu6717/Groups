
<div class="well">
 <a href='#' class='btm btm-primary'>Members for the group <%= @group.name %> </a>
  <% if !Group.all.empty? %>
    <%= link_to 'Add Memeber', new_user_path, class: 'pull-right btn btn-primary' %>
  <% end %>


</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Gender</th>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
  </thead>
  <tbody class="group-index">
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= member.gender %></td>
      </tr>
    <% end %>
  </tbody>
</table>