      <%= link_to 'Add Memeber', new_user_path, class: 'pull-right btn btn-primary' %>
    <% end %>
  </div>
  <div class="new-group"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="group-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="group-modal" class="modal hide fade"></div>