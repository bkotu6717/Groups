$("ul.errors").html("")
<% if @group.errors.any? %>
  <% @group.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".group-index").html("<%= escape_javascript(render 'index') %>")
  $("#group-modal").modal("hide")
<% end %>